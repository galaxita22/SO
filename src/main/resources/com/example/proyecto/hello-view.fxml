<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="10" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyecto.SimuladorController">

    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <!-- Título Principal -->
    <HBox alignment="CENTER" style="-fx-background-color: #2196F3; -fx-background-radius: 5;">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <Label text="SIMULADOR DE GESTIÓN DE PROCESOS Y MEMORIA" textFill="white">
            <font>
                <Font name="Arial Bold" size="18" />
            </font>
        </Label>
    </HBox>

    <!-- Panel de Control Principal -->
    <HBox spacing="10" VBox.vgrow="ALWAYS">

        <!-- Panel Izquierdo: Creación de Procesos y Configuración -->
        <VBox prefWidth="350" spacing="10" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="CREAR PROCESO" />
            <Separator />
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" prefWidth="120" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
                <Label text="Tiempo Llegada:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtLlegada" promptText="ej: 0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="CPU Burst:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtDuracion" promptText="ej: 10" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Memoria (MB):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="txtMemoria" promptText="ej: 256" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>
            <Button fx:id="btnCrearProceso" maxWidth="Infinity" onAction="#handleCrearProceso" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Crear Proceso" />
            <Button fx:id="btnBorrarColaNuevos"
                    text="Borrar Cola de Nuevos"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"
                    onAction="#handleBorrarColaNuevos"
                    maxWidth="Infinity" />

            <Separator />
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="CONFIGURACIÓN DE SIMULACIÓN" />
            <Separator />
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints minWidth="150" prefWidth="150" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
                <Label text="Algoritmo:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ComboBox fx:id="comboAlgoritmo" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Quantum (RR):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtQuantum" promptText="ej: 3" text="3" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Política Reemplazo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <ComboBox fx:id="comboPoliticaReemplazo" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Modo de Memoria:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <ComboBox fx:id="comboModoMemoria" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>
            <Separator />
            <HBox spacing="10">
                <Button fx:id="btnIniciar" onAction="#handleIniciarSimulacion" prefWidth="100" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="▶ Iniciar" />
                <Button fx:id="btnDetener" onAction="#handleDetenerSimulacion" prefWidth="100" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" text="⏸ Detener" />
                <Button fx:id="btnComparar" onAction="#handleComparar" prefWidth="100" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;" text=" Comparar" />
            </HBox>
            <Separator />
            <HBox alignment="CENTER" style="-fx-background-color: #e3f2fd; -fx-background-radius: 5;">
                <padding>
                    <Insets bottom="8" left="8" right="8" top="8" />
                </padding>
                <Label fx:id="lblReloj" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Reloj: 0" />
            </HBox>
            <Label style="-fx-font-weight: bold;" text="ESTADO DE CPU" />
            <TextArea fx:id="txtCPU" editable="false" prefHeight="80" style="-fx-font-family: 'Courier New'; -fx-font-size: 12px;" />
        </VBox>

        <!-- Panel Derecho: Tablas y Visualización -->
        <ScrollPane fitToHeight="false" fitToWidth="true" HBox.hgrow="ALWAYS">
            <content>
                <VBox spacing="10">

                    <!-- Tabla de Procesos Nuevos -->
                    <VBox spacing="5" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                        <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                        <Label style="-fx-font-weight: bold;" text="COLA DE NUEVOS" />
                        <TableView fx:id="tablaNuevos" maxHeight="150.0" maxWidth="800" minHeight="150.0" minWidth="800" prefHeight="150.0" prefWidth="800" />
                    </VBox>

                    <!-- Tabla de Procesos Listos -->
                    <VBox spacing="5" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                        <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                        <Label style="-fx-font-weight: bold;" text="COLA DE LISTOS" />
                        <TableView fx:id="tablaListos" maxHeight="150.0" maxWidth="800" minHeight="150.0" minWidth="800" prefHeight="150.0" prefWidth="800" />
                    </VBox>

                    <!-- Tabla de Procesos Espera I/O -->
                    <VBox spacing="5" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                        <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                        <Label style="-fx-font-weight: bold;" text="PROCESOS EN ESPERA (I/O)">
                            <font><Font size="12" /></font>
                        </Label>
                        <TableView fx:id="tablaEsperando" maxHeight="150.0" maxWidth="800" minHeight="150.0" minWidth="800" prefHeight="150.0" prefWidth="800" />
                    </VBox>

                    <!-- Visualización de Memoria -->
                    <VBox spacing="5" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                        <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                        <Label style="-fx-font-weight: bold;" text="ESTADO DE MEMORIA" />
                        <Label fx:id="lblMemoriaUsada" text="Memoria: 0 / 2048 MB (0%)" />
                        <Label fx:id="lblFragmentacion" text="Fragmentación Externa: 0 MB" />
                        <Canvas fx:id="canvasMemoria" height="60" style="-fx-border-color: #bdbdbd; -fx-border-width: 1;" width="776.0" />
                        <HBox alignment="CENTER" spacing="15">
                            <HBox alignment="CENTER_LEFT" spacing="5">
                                <Label style="-fx-text-fill: #4CAF50; -fx-font-size: 16px;" text="▢" />
                                <Label text="Ocupado" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="5">
                                <Label style="-fx-text-fill: #E0E0E0; -fx-font-size: 16px;" text="▢" />
                                <Label text="Libre" />
                            </HBox>
                        </HBox>
                    </VBox>

                    <!-- Tabla de Procesos Terminados -->
                    <VBox spacing="5" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                        <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                        <Label style="-fx-font-weight: bold;" text="PROCESOS TERMINADOS" />
                        <TableView fx:id="tablaTerminados" maxHeight="150.0" maxWidth="800" minHeight="150.0" minWidth="800" prefHeight="150.0" prefWidth="800" />
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>

    </HBox>
</VBox>